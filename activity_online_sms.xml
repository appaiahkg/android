<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.akg.com.instabroadcast.SmsActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:textColor="#ffffff"
        android:gravity="center"
        android:text="Bulk Online Sms"
        android:textSize="20sp"
        android:background="#009ACD"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:textColor="#0f4d86"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="30dip"
        android:textStyle="bold"
        android:text="Upload the .txt file with each phone-number in a seperate line" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPLOAD"
        android:id="@+id/onlinesmsUpload"
        android:background="#009ACD"
        android:layout_marginLeft="5dip"
        android:textColor="#ffffff"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#0f4d86"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="5dip"
        android:textStyle="bold"
        android:text="Enter the Message:" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="170dip"
        android:background="#ffffff"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginBottom="30dip">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D3D3D3"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:id="@+id/onlinesmsContent"
                android:minLines="7"
                android:inputType="textMultiLine"
                />
        </LinearLayout>


    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND"
        android:background="#3CB371"
        android:id="@+id/sendOnlineSmsButton"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"/>



</LinearLayout>