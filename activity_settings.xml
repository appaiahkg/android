<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="#0f4d86"
    tools:context="net.akg.com.ats.SettingsActivity">

    <TextView
        android:text="Settings"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:textColor="#ffffff"
        android:background="#000000"
        android:gravity="center_horizontal"
        android:paddingTop="15dip"
        android:layout_marginBottom="5dip"
        android:layout_height="40dip" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:textColor="#ffffff"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="30dip"
        android:textStyle="bold"
        android:text="Enter your GMAIL Credentials:" />

<!--    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dip">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="20dip"
                android:layout_marginLeft="10dip"
                android:layout_marginBottom="10dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Please  Enter Your Email ID"/>
            <EditText
                android:id="@+id/txtSettingsEmail"
                android:layout_marginLeft="10dip"
                android:background="#ffffff"
                android:layout_marginRight="5dip"
                android:layout_marginTop="2dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_marginTop="2dip"
                android:layout_marginLeft="10dip"
                android:layout_marginBottom="10dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Please  Enter Your Password"/>
            <EditText
                android:id="@+id/txtPassword"
                android:layout_marginLeft="10dip"
                android:background="#ffffff"
                android:inputType="textPassword"
                android:layout_marginRight="5dip"
                android:layout_marginTop="2dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <Button
                android:id="@+id/btnSettingsSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dip"
                android:text="SAVE"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:text="After saving the credentials.Log in to your gmail id in a seperate browser and enable the following settings -> myaccount to enable communication."
                android:textColor="#000000"
                android:background="#ffffff"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnVideo"
                android:text="Gmail Configuration Settings Video Description"/>

        </LinearLayout>


<!--    </ScrollView>-->




</LinearLayout>

